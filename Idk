def moving(comm):
    global currentroom
    if(comm == "west"):
        realness="west" in dirs
        if realness==True:
            currentroom=(dirs["west"])
        else:
            print("You can't go that way")   
    if(comm == "east"):
        realness="east" in dirs
        if realness==True:
            currentroom=(dirs["east"])
        else:
            print("You can't go that way")  
    if(comm == "south"):
        realness="south" in dirs
        if realness==True:
            currentroom=(dirs["south"])
        else:
            print("You can't go that way")  
    if(comm == "north"):
        realness="north" in dirs
        if realness==True:
            currentroom=(dirs["north"])
        else:
            print("You can't go that way")

def push(comm):
    global light
    global currentroom
    if comm=="push button" and currentroom=="room1":
        print("You pushed the button!")
        light="on"

#def look(comm):

def pull(comm):
    if comm=="pull lever":
        print("You pulled the lever")


def room1(proom):
    if proom=="room1":
        pass
    else:
        print("You are in room1! There is a button")
    directions = {"east": "room2"}
    return directions

def room2(lit, proom):
    if lit=="on":
        print("You are in room2! A light is on.")
    elif proom=="room2":
        pass
    else:
        print("You are in room2!")
    directions = {"west": "room1"}
    return directions


currentroom="room1"
light="off"
preroom="no"

print("Hello")

while True:
    if currentroom=="room1":
        dirs = room1(preroom)
        preroom="room1"
    #    print(dirs)
    if currentroom=="room2":
        dirs = room2(light, preroom)
        preroom="room2"
    com=input(">> ")
    moving(com)
    push(com)
    if com=="q":
        break
    
    
    
    
    
    
    
    
